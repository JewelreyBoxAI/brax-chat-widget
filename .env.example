# =============================================================================
# BRAX JEWELERS AI ASSISTANT - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# WARNING: Never commit .env files with real credentials to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment (development, staging, production)
ENVIRONMENT=development

# Application Port (Azure will override with PORT env var)
PORT=8000

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
MAX_TOKENS=1024
TEMPERATURE=0.9

# Security Configuration
WIDGET_SECRET_TOKEN=generate-a-secure-random-token
TRUSTED_HOSTS=*.azurewebsites.net,localhost,127.0.0.1
ALLOWED_ORIGINS=https://yourdomain.com,https://*.azurewebsites.net

# =============================================================================
# GOHIGHLEVEL CRM INTEGRATION
# =============================================================================

# GoHighLevel API Configuration
GHL_API_BASE_URL=https://rest.gohighlevel.com/v1
GHL_API_KEY=your-ghl-api-key
GHL_SUB_ACCOUNT_ID=your-sub-account-id

# GoHighLevel MCP (Model Context Protocol) Configuration
# MCP Server must be deployed separately - see deployment documentation
GHL_MCP_ENABLED=false
GHL_MCP_URL=https://your-mcp-server.azurewebsites.net/mcp/
GHL_PIT_TOKEN=your-private-integration-token
GHL_LOCATION_ID=your-location-id

# MCP Client Configuration
GHL_MCP_TIMEOUT=30
GHL_DEFAULT_CONTACT_LIMIT=100
GHL_DEFAULT_MESSAGE_LIMIT=20
GHL_DEFAULT_TRANSACTION_LIMIT=20

# GoHighLevel Calendar IDs for Appointment Scheduling
GHL_CALENDAR_REPAIR_ID=your-calendar-id
GHL_CALENDAR_CUSTOM_JEWELRY_ID=your-calendar-id
GHL_CALENDAR_APPRAISALS_ID=your-calendar-id
GHL_CALENDAR_CAMPAIGN_ID=your-calendar-id

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Search Engine Integration
TAVILY_API_KEY=your-tavily-api-key

# ElevenLabs TTS (Optional - currently disabled)
# ELEVEN_API_KEY=your-elevenlabs-api-key
# ELEVEN_VOICE_ID=your-voice-id

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
LOG_LEVEL=INFO

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_SECURITY_HEADERS=true
ENABLE_TELEMETRY=true

# Development Features (disabled in production)
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_SWAGGER_UI=false